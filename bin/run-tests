#!/usr/bin/env bash

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

docker run --rm \
      -v "${DIR}"/../:/var/www/ \
      gelato_coding_exercise_checkout_php-cli:latest \
      bash -c \
      "
      composer install --no-interaction; \
      echo \"Running unit tests...\";\
      ./vendor/bin/phpunit tests
      "
